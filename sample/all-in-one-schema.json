{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "age": {
            "type": "integer"
        },
        "is_student": {
            "type": "boolean"
        },
        "address": {
            "type": "object",
            "properties": {
                "street": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                }
            },
            "required": [
                "street",
                "city",
                "country"
            ]
        },
        "emails": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                },
                {
                    "type": "string"
                }
            ]
        },
        "grades": {
            "type": "object",
            "properties": {
                "math": {
                    "type": "integer"
                },
                "science": {
                    "type": "integer"
                },
                "history": {
                    "type": "integer"
                }
            },
            "required": [
                "math",
                "science",
                "history"
            ]
        },
        "languages": {
            "type": "array",
            "items": [
                {
                    "type": "string"
                },
                {
                    "type": "string"
                }
            ]
        },
        "interests": {
            "type": "null"
        }
    },
    "required": [
        "name",
        "age",
        "is_student",
        "address",
        "emails",
        "grades",
        "languages",
        "interests"
    ]
}